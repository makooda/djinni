{
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Frontend",
            "program": "${workspaceFolder}/frontend/universe/src/index.tsx",
            "cwd": "${workspaceFolder}/frontend/universe",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "start"
            ],
            "envFile": "${workspaceFolder}/frontend/universe/.env"
        },
        {
            "type": "debugpy",
            "request": "launch",
            "name": "Launch Backend",
            "program": "${workspaceFolder}/backend/universe/user-management/src/manage.py",
            "args": [
                "runserver"
            ],
            "cwd": "${workspaceFolder}/backend/universe",
            "envFile": "${workspaceFolder}/backend/universe/user-management/.env"
        }
    ]
}